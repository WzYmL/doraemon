<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="CrustApplication"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.equinoxosgi.toast.crust.internal.display.CrustDisplay">
         </run>
      </application>
   </extension>

   <extension
         id="ToastProduct"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.equinoxosgi.toast.crust.display.CrustApplication"
            name="Toast Client (Full)">
         <property
               name="appName"
               value="Toast Client (Full)">
         </property>
      </product>
   </extension>

</plugin>
